    flex-flow: row wrap;
    flex-wrap: wrap;
}
.store-basic-item-box {
    height: 240rpx;
    background-color: white;
    border-radius: 10rpx;
    box-shadow: 5rpx 5rpx 5rpx 2rpx rgba(85, 85, 85, 0.05);
    margin: 20rpx auto;

    flex: 0 0 46%;
    display: flex;
    flex-direction: column;
}
.store-basic-item-box image {
  height: 240rpx;
  width: 100%;
  margin: 0 auto;
  border-radius: 10rpx;
}
.store-basic-item-divline {
  width: 2%;
  height: 560rpx
}
.store-basic-item-text {
  display: flex;
