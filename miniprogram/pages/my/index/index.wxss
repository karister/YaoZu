.labels_box{
    width: 100%;
    text-align: center;
    display: flex;
    align-content: flex-start;
    flex-flow: row wrap;
}
.label_item_box{
    flex: 0 0 25%;
    display: flex;
    flex-direction: column;
    margin-top: 20px;
