}




.area-basic-box {
    width: 100%;
    text-align: center;
    display: flex;
    align-content: flex-start;
    flex-flow: row wrap;
}
.area-basic-item-box {
    flex: 0 0 50%;
    display: flex;
    flex-direction: column;
}
.area-basic-item-box image {
  height: 250rpx;
  width: 90%;
  margin: 20rpx auto;
  border-radius: 10rpx;
}
.area-basic-item-divline {
  width: 6%;
  height: 300rpx
}
.area-basic-item-text {
  height: 50rpx;
}
.area-basic-item-text > text {
  font-size: 36rpx;
  font-weight: 600;
}



.store-basic-box {
    display: flex;
    flex-direction: row;
